<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <header class="d-flex justify-content-center py-3">
    <ul class="nav nav-pills">
      <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Home</a></li>
        <button type="button" class="btn btn-warning" onclick="window.location.href='/logout'">Logout</button>
      </li>
    </ul>
  </header>
  <div>
    <h1 style="text-align: center;">Add Profile</h1>
  </div>
    <div class="col-md-7 col-lg-8" style="margin-left: 250px;">
        <form class="needs-validation" action="/profiles/add" method="post">
          <div class="row g-3">
            <div class="col-12">
              <label for="email" class="form-label">Name</label>
              <input type="text" name="name" class="form-control">
            </div>
            <div class="col-12">
                <label for="email" class="form-label">Address</label>
                <input type="text" name="address" name="title" class="form-control">
            </div>

            <div class="col-12">
              <label for="address2" class="form-label">Gender</label>
              <input type="text" name="gender" class="form-control">
            </div>
             
            <div class="col-12" style="margin-top: 3 rem;">
                <label for="address2" class="form-label">Date Of Birth</label>
                <input type="date" name="dateOfBirth" class="form-control">
            </div>
              
            <button class="w-100 btn btn-primary btn-lg" type="submit" style="margin-top: 2rem;">Submit</button>
        </form>
    </div>
</body>
</html>