<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <header class="d-flex justify-content-center py-3">
    <ul class="nav nav-pills">
      <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Home</a></li>
        <button type="button" class="btn btn-warning" onclick="window.location.href='/logout'">Logout</button>
      </li>
    </ul>
  </header>
      <h1 style="text-align: center;margin: 2rem;">List Disease</h1>
      <div style="display: flex;justify-content: center;">
        <table class="table table-dark table-striped" style="max-width:90rem;">
          <thead>
              <tr>
                <th scope="col">No.</th>
                <th scope="col">Name</th>
                <th scope="col">ICD Id</th>
                <th scope="col">Level</th>
                <th scope="col">Description</th>
                <th scope="col">Treatment</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((el,i) => { %>
                  <tr>
                      <th scope="row"><%= i+1 %></th>
                      <td><%= el.name %></td>
                      <td><%= Icd(el.name) %></td>
                      <td><%= el.level %></td>
                      <td><%= el.description %></td>
                      <td><%= el.treatment %>--</td>
                    </tr>
              <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>